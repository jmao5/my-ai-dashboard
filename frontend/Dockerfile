# 1. ì˜ì¡´ì„± ì„¤ì¹˜ ë‹¨ê³„ (Deps)
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm install --legacy-peer-deps

# 2. ë¹Œë“œ ë‹¨ê³„ (Builder)
FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# ğŸ‘‡ [ì¶”ê°€] ë¹Œë“œ ì‹œì ì— ë³€ìˆ˜ ë°›ê¸° (ARG) & ì„¤ì •í•˜ê¸° (ENV)
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_AI_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_AI_URL=$NEXT_PUBLIC_AI_URL

# Next.js ë¹Œë“œ ì‹¤í–‰ (ì••ì¶•ëœ ìš´ì˜ìš© íŒŒì¼ ìƒì„±)
RUN npm run build

# 3. ì‹¤í–‰ ë‹¨ê³„ (Runner) - ê°€ë²¼ìš´ ì´ë¯¸ì§€
FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production

# ë³´ì•ˆì„ ìœ„í•´ nodejs ìœ ì € ì‚¬ìš©
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# ë¹Œë“œëœ íŒŒì¼ë§Œ ë³µì‚¬í•´ì˜´
COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

EXPOSE 3000
ENV PORT=3000
# dev ëŒ€ì‹  nodeë¡œ ì§ì ‘ ì‹¤í–‰
CMD ["node", "server.js"]